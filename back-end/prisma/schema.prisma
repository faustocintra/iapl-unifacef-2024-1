generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  fullname    String        // Nome completo do usuário
  username    String        @unique // Nome de usuário
  password    String        // Senha
  is_admin    Boolean       @default(false)
}

model Cars {
  id          Int           @id @default(autoincrement())
  brand       String        // Marca do veículo 
  model       String        // Modelo do veículo  
  owner_name  String        // Nome do dono
  color       String        // Cor do veículo
  year        Int           // Ano do veíuclo
  imported    Boolean       @default(false) // Veículo importado (S/N)
  plates      String        // Placa do veículo
}

